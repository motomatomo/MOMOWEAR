@{
    ViewBag.Title = "Home Page";
}



<div class="container login">
    <div class="row mt-3 d-flex justify-content-center  text-center ">

        <div class="col-10 col-md-4 " id="loginslide">
            <div class="item pink">
                <form action="@Url.Action("Index")" method="POST" class="p-5 mt-5 loginform">
                    <h5 class="text-light my-1 p-3 text-light">登入</h5>

                    <input type="email" name="loginAccount" placeholder="請輸入email帳號" required
                           class="mt-3 col-md-12 col-12">
                    <input type="password" name="loginPassword" placeholder="請輸入密碼" required class="mt-3 col-md-12 col-12">
                    <a href="/Home/ForgetPWD" class="btn-link" style="color:#ffffff;text-decoration:none;">忘記密碼</a>
                    <hr class="text-light" />
                    <input type="submit" value="登入" class="btn btn-default">
                    @*<input type="submit" value="註冊" class="tomatobtn">*@

                    <a href="/Home/register" class="btn btn-default">註冊</a>

                    <p class="text-danger">@ViewBag.Err</p>

                </form>
            </div>
        </div>

    </div>
</div>





